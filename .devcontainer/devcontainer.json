{
  "name": "Photon",
  "image": "mcr.microsoft.com/devcontainers/python:3",
  "postCreateCommand": "pip install -r requirements.txt && pip install flake8",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.flake8"
      ]
    }
  }
}
